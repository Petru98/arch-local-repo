print_info "Installing $AUR_HELPER AUR helper"
print_warning "None of these tools are officially supported by Arch devs."
case "$AUR_HELPER" in
    yay)
        if ! is_package_installed yay ; then
            package_install --asdeps go
            aur_build_packages yay
            if ! is_package_installed yay ; then
                critical_error "$AUR_HELPER not installed"
            fi
        fi
        ;;
    pikaur)
        if ! is_package_installed pikaur ; then
            package_install --asdeps pyalpm
            package_install git
            aur_build_packages pikaur
            if ! is_package_installed pikaur ; then
                critical_error "$AUR_HELPER not installed"
            fi
        fi
        ;;
    trizen)
        if ! is_package_installed trizen ; then
            package_install --asdeps perl
            aur_build_packages trizen
            if ! is_package_installed trizen ; then
                critical_error "$AUR_HELPER not installed"
            fi
        fi
        ;;
    *)
        critical_error "Unknown AUR helper $AUR_HELPER"
        ;;
esac
