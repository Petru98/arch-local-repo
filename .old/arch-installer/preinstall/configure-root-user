print_title "Root user"

print_info "Configuring the password."
arch_chroot "passwd"

print_info "Configuring the shell."
arch_chroot "chsh -s /bin/zsh"
cp -fr /etc/zsh/zshrc ${ROOT_MOUNTPOINT}$HOME/.zshrc

if [[ "$http_proxy" != "" ]]; then
    print_info "Configuring proxy in .curlrc"
    echo "proxy = $http_proxy" > ${ROOT_MOUNTPOINT}$HOME/.curlrc
fi
