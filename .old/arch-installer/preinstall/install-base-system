print_title "Base system"
print_info "Installing PGP keyring."
pacman -Sy --noconfirm --needed archlinux-keyring

# bool $UEFI && rm -f ${ROOT_MOUNTPOINT}${EFI_MOUNTPOINT}/vmlinuz-linux #???
print_info "Installing the base and base-devel package groups to $ROOT_MOUNTPOINT."
arch_pacstrap $LINUX_VERSION $LINUX_VERSION-headers linux-firmware base base-devel \
    bash-completion zsh zsh-completions zsh-autosuggestions \
    cryptsetup device-mapper dhcpcd diffutils e2fsprogs gvim inetutils iwd jfsutils \
    less logrotate lvm2 man-db man-pages mdadm nano \
    python perl reiserfsprogs s-nail sysfsutils texinfo usbutils which xfsprogs

print_info "Installing wireless tools in $ROOT_MOUNTPOINT."
arch_pacstrap iw wireless_tools wpa_supplicant

if [[ "$WIRED_DEV" != "" ]]; then
    print_info "Enabling dhcpcd for $WIRED_DEV in $ROOT_MOUNTPOINT."
    arch_chroot systemctl enable dhcpcd@$WIRED_DEV.service
fi

# print_info "Installing espeakup in $ROOT_MOUNTPOINT."
# arch_pacstrap alsa-utils espeak-ng-espeak espeakup brltty
# arch_chroot systemctl enable espeakup.service

print_info "Installing other tools."
arch_pacstrap $EDITOR \
    parted btrfs-progs f2fs-tools gptfdisk ntfs-3g dosfstools exfat-utils autofs mtpfs cdrtools \
    zip unzip unrar p7zip zstd lzop cpio \
    openssh wget
